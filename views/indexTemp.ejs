<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Random Drink Recipe Generator</title>
    <meta name="description" content="" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <link rel="stylesheet" type="text/css" href="styles/main.css" />
  </head>
  <body>
    <% if(locals.drink) { %>
    <h1><%= drink.name %></h1>
    <h2><%= drink.type %></h2>
    <div class="drinkImageCard">
      <img src="<%= drink.imgSrc %>" />
    </div>
    <div class="drinkRecipeCard">
      <h3 id="headerServingGlassType">Typically served in:</h3>
      <span><%= drink.glassType %></span>

      <h3>Ingredients:</h3>
      <ul>
        <% drink.ingredients.forEach((ingr) => { %>
        <li><%= ingr %></li>
        <% }); %>
      </ul>

      <h3>Instructions</h3>
      <p><%= drink.recipe %></p>
    </div>
    <% } else { %>
    <div class="error">
      <p>There was an issue generating a drink</p>
    </div>
    <% } %>
    <!-- <input class="btnMore" type="submit" formaction="/" value="One more"></input> -->
  </body>
</html>
